<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/basicback" />

        <TextView
            android:id="@+id/plant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여기는 식물 이름입니다"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/floriography"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여기는 꽃말 입니다"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/plant_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여기는 식물에 대한 설명입니다zzzzzz
            zzzzzzzzzzzzzzzzzzzzzzzzzzzzzzz
            zzzzzzzzzzzzzzzzzzzzzzzzzzzz
            zzzzdddddddddddddddddddddddddddddd"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/choice_button"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="선택하기"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>