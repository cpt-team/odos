<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define the sky blue color -->

    <!-- Style for the NumberPicker -->
    <style name="SkyBlueNumberPickerStyle">
        <!-- Set text color to black -->
        <item name="android:textColor">@android:color/black</item>
        <!-- Center align text -->
        <item name="android:gravity">center</item>
        <!-- Set the background color -->
        <item name="android:background">@android:color/white</item>
        <!-- Set selection divider color to sky blue -->
        <item name="android:colorControlNormal">@color/skyBlue</item>
    </style>

    <!-- 테마 -->
    <style name="TestTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>

        <item name="android:textStyle">bold</item>

        <item name="android:buttonTint">@color/brown_test</item>

    </style>

</resources>